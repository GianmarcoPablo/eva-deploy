---
import Layout from "../../../../layouts/Layout.astro";

---

<Layout title="About">
    <header class="bg-white border-b px-5 py-3">
        <p class="text-xl font-bold">Desarrollo Avanzado de Aplicaciones I</p>
    </header>
    <div class="bg-white mt-4 pt-5 pb-7 shadow rounded-xl mx-5 px-4 flex gap-4">
        <div class="w-[76%]">
            <p class="font-semibold mb-4 text-sm">
                Actualmente estás en la semana 14 de 14
            </p>
            <div class="h-2-custom w-full bg-gray-200 rounded-full mt-2">
                <div
                    class="h-full bg-green-400 rounded-full"
                    style="width: 100%;"
                >
                </div>
            </div>
        </div>

        <div class="flex gap-4">
            <p class="flex items-center mt-5 text-sm">100%</p>
            <select
                class="border h-12 text-xs px-3 mt-2 border-gray-300 rounded-md w-80"
                onchange="location = this.value;"
            >
                <option value="/clases">Clases</option>
                <option value="/estudiantes/cursos/comunicacion">Notas</option>
                <option value="">Asistencias</option>
                <option value="">Contactos</option>
                <option value="">Informacion</option>
            </select>
        </div>
    </div>

    <div class="flex">
        <div
            class="bg-white border border-gray-200 rounded-2xl shadow flex items-center w-[50%] gap-24 py-7 mt-7 mx-5 px-7"
        >
            <div class="flex flex-col gap-14">
                <p class="text-xs mb-1">20</p>
                <p class="text-xs mb-1">15</p>
                <p class="text-xs mb-1">10</p>
                <p class="text-xs mb-1">05</p>
                <p class="text-xs">00</p>
            </div>
            <div class="flex gap-40">
                <div class="flex flex-col items-center">
                    <div class="progress-bar-container">
                        <div class="progress-bar-background"></div>
                        <div class="nota-18" style="height: 250px;"></div>
                    </div>
                    <span class="mt-2">EC1</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="progress-bar-container">
                        <div class="progress-bar-background"></div>
                        <div class="nota-16" style="height: 250px;"></div>
                    </div>
                    <span class="mt-2">EC2</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="progress-bar-container">
                        <div class="progress-bar-background"></div>
                        <div class="nota-16" style="height: 250px;"></div>
                    </div>
                    <span class="mt-2">EC3</span>
                </div>
                <div class="flex flex-col items-center">
                    <div class="progress-bar-container">
                        <div class="progress-bar-background"></div>
                        <div class="nota-14" style="height: 250px;"></div>
                    </div>
                    <span class="mt-2">EC4</span>
                </div>
            </div>
        </div>
        <div class="mt-7 bg-white shadow">
            <p class="ml-7 mt-4 font-bold">Detalles de notas</p>

            <div class="grid grid-cols-3 gap-4  px-10">
                <div class="py-6">
                    <div class="text-sm">
                        <p class="mt-8"><span class="bolita"></span> Evaluación Continua 1 (4%)</p>
                        <p class="mt-8"><span class="bolita"></span> Evaluación Continua 2 (12%)</p>
                        <p class="mt-8"><span class="bolita"></span> Evaluación Continua 3 (24%)</p>
                        <p class="mt-8"><span class="bolita"></span> Evaluación Final 4 (60%)</p>
                    </div>
                </div>

                <div class="py-6 px-16">
                    <div class="text-sm">
                        <p class="mt-8">18</p>
                        <p class="mt-8">16</p>
                        <p class="mt-8">16</p>
                        <p class="mt-8">14</p>
                    </div>
                </div>

                <div class="py-6 px-10">
                    <div class="text-sm">
                        <p class="text-gray-400 mt-8 decoracion-link">Solicitar Revision</p>
                        <p class="text-gray-400 mt-8 decoracion-link">Solicitar Revision</p>
                        <p class="text-gray-400 mt-8 decoracion-link">Solicitar Revision</p>
                        <p class="text-gray-400 mt-8 decoracion-link">Solicitar Revision</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

